<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="queryProvider"
          class="org.springframework.batch.item.database.support.SqlPagingQueryProviderFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="databaseType" value="DB2"/>
        <property name="selectClause" value="p.*"/>
        <property name="fromClause" value="PERSON as p JOIN ADDRESS as a on p.address_id = a.address_id"/>
        <property name="whereClause" >
            <value>
                <![CDATA[
WHERE (a.address_id = 1 or a.address_id = 2 or a.address_id = 3 or a.address_id = 4)
]]>
            </value>
        </property>
        <property name="sortKey" value="p.name"/>
    </bean>

</beans>
